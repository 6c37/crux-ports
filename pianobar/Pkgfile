# Description:  Console-based pandora.com player
# URL:          http://6xq.net/projects/pianobar/
# Packager:     Ethan Smith, esmth at openmailbox dot org
# Maintainer:   Ethan Smith, esmth at openmailbox dot org
# Depends on:   json-c libao 

name=pianobar
version=git
release=1
source=(
	https://github.com/PromyLOPh/pianobar/archive/master.tar.gz
	fix_compiler_name.patch
)

build() {
        cd $name-master

	patch -p1 < "$SRC/fix_compiler_name.patch"

        make
        make DESTDIR="$PKG" PREFIX="/usr" MANDIR="/usr/man" install
}
