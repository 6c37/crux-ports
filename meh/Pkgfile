# Description: Simple, minimalist, super fast image viewer. (git checkout)
# URL:         http://www.johnhawthorn.com/meh/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  onodera, onodera at openmailbox dot org
# Depends on:  git imagemagick xorg-libx11

name=meh
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/jhawthorn/meh $name
		cd $name
	fi

	make
	make PREFIX=/usr MANDIR=/usr/man DESTDIR=$PKG install
}
