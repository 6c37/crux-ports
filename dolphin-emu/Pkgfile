# Description: A GameCube / Wii / Triforce emulator -- git checkout
# URL:         http://www.dolphin-emu.org/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  onodera, onodera at openmailbox dot org
# Depends on:  cmake git libsdl2

name=dolphin-emu
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/dolphin-emu/dolphin $name
		cd $name
	fi

	mkdir build
	cd build

	cmake ../ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release

	make all
	make DESTDIR=$PKG install
}
