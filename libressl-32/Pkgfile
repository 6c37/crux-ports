# Description: LibreSSL is a version of the TLS/crypto stack forked from OpenSSL. (32 bit libs)
# URL:         http://www.libressl.org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:

name=libressl-32
version=2.4.1
release=1
source=(http://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-$version.tar.gz)

build() {
	cd libressl-$version

	./configure \
		--prefix=/usr \
		--with-openssldir=/etc/ssl \
		--libdir=/usr/lib32

	make
	make DESTDIR=$PKG LIBDIR=lib32 install

	rm -rf $PKG/usr/{bin,include}
	rm -rf $PKG/etc
}
