# Description: grsecurity RBAC administration utility
# URL:         https://grsecurity.net/
# Packager:    Thomas Penteker, tek at serverop dot de
# Maintainer:  Thomas Penteker, tek at serverop dot de
# Depends on:

name=gradm
version=201408301734
release=1
source=(https://grsecurity.net/stable/gradm-3.0-$version.tar.gz)

build() {
	cd $name

	install -d $PKG/etc/udev/rules.d

	make
	make DESTDIR=$PKG MANDIR=/usr/man install

	rm -rf $PKG/dev
}
