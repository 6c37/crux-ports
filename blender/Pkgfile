# Description: A fully integrated 3D graphics creation suite.
# URL:         http://blender.org/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  boost cmake desktop-file-utils ffmpeg fftw glew glu python3 openimageio opencolorio

name=blender
version=2.79
release=2
source=(https://download.blender.org/source/blender-$version.tar.gz)

build() {
	cd $name-$version

	mkdir build && cd build
	cmake -C ../build_files/cmake/config/blender_release.cmake ../ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DWITH_INSTALL_PORTABLE=OFF \
		-DWITH_INTERNATIONAL=OFF \
		-DWITH_PYTHON=ON \
		-DPYTHON_VERSION=3.6 \
		-DPYTHON_LIBPATH=/usr/lib \
		-DPYTHON_LIBRARY=python3.6m \
		-DPYTHON_INCLUDE_DIRS=/usr/include/python3.6m \
		-DWITH_PYTHON_INSTALL=OFF \
		-DOPENIMAGEIO_ROOT_DIR=/usr \
		-DWITH_CYCLES=ON \
		-DWITH_CYCLES_NATIVE_ONLY=ON \
		-DWITH_CYCLES_PTEX=OFF \
		-DWITH_SYSTEM_OPENJPEG=ON \
		-DWITH_SYSTEM_LZO=ON

	make
	make DESTDIR=$PKG install

	python3 -m compileall $PKG/usr/share/blender
	python3 -O -m compileall $PKG/usr/share/blender

	rm -rf $PKG/usr/share/{doc,blender/$version/scripts/addons/cycles/license}
	find $PKG -iname 'readme*' -delete
}
