# Description: The Rust package manager.
# URL:         https://crates.io
# Packager:    Lains, lainsce at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  rustc


name=cargo
version=nightly
release=1
source=("https://static.rust-lang.org/cargo-dist/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz")

build() {
    cd cargo-nightly-x86_64-unknown-linux-gnu

    install -Dm644 $name/share/man/man1/cargo.1 $PKG/usr/man/man1/cargo.1
    install -Dm755 $name/bin/cargo $PKG/usr/bin/cargo
}

