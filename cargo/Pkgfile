# Description: The Rust package manager.
# URL:         https://crates.io
# Packager:    Lains, lainsce at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  rustc python curl cmake pkg-config openssl


name=cargo
version=20150610
release=1
source=("https://static.rust-lang.org/cargo-dist/cargo-nightly-x86_64-unknown-linux-gnu.tar.gz")

build() {

    cd $PKGMK_SOURCE_DIR

    tar xf cargo-nightly-x86_64-unknown-linux-gnu.tar.gz

    cd cargo-nightly-x86_64-unknown-linux-gnu

    install -D -m644 $name/etc/bash_completion.d/cargo $PKG/etc/bash_completion.d/cargo
    install -D -m644 $name/share/zsh/site-functions/_cargo $PKG/usr/share/zsh/site-functions/_cargo
    install -D -m644 $name/share/man/man1/cargo.1 $PKG/usr/man/man1/cargo.1
    install -D -m644 LICENSE-APACHE $PKG/usr/share/licenses/$name/LICENSE-APACHE
    install -D -m644 LICENSE-MIT $PKG/usr/share/licenses/$name/LICENSE-MIT

    install -D -m755 $name/bin/cargo $PKG/usr/bin/cargo
}

