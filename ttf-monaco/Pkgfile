# Description: A monospaced sans-serif typeface by Apple Inc.
# URL:         http://apple.com
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  fontconfig

name=ttf-monaco
version=6.1
release=1
source=(file: Monaco_linux.ttf)

build() {
	install -Dm644 Monaco_Linux.ttf $PKG/usr/share/fonts/X11/TTF/Monaco/Monaco.ttf
}
