# Description: An extensible, customizable text editor.
# URL:         https://www.gnu.org/software/emacs/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  ctags giflib libjpeg-turbo libtiff xorg-libxpm

name=emacs
version=25.1
release=3
source=(http://ftp.gnu.org/gnu/emacs/$name-$version.tar.xz)

build() {
	cd $name-$version

	ac_cv_lib_gif_EGifPutExtensionLast=yes
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--sysconfdir=/etc \
		--without-makeinfo \
		--without-gif \
		--with-xft

	make
	make DESTDIR=$PKG install

	rm $PKG/usr/bin/{c,e}tags
	rm $PKG/usr/share/man/man1/{c,e}tags.1.gz
	rm -rf $PKG/usr/share/info
	find $PKG -name '*README*' -delete
	find $PNG -name '*NEWS*' -delete
	find $PKG -name COPYING -delete
	find $PKG/usr/share/emacs/$version/etc -name '[A-Z]*' ! -name '*.map' ! -name '*.el' ! -name '*.xml' ! -name Makefile ! -name 'TUTORIAL*' -delete
}
