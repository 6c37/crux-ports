# Description: Decoding library for BMP and ICO image file formats.
# URL:         http://www.netsurf-browser.org/projects/libnsbmp/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  netsurf-buildsystem

name=libnsbmp
version=0.1.3
release=1
source=(http://download.netsurf-browser.org/libs/releases/libnsbmp-$version-src.tar.gz)

build() {
	cd $name-$version

	make INCLUDEDIR=include LIBDIR=lib PREFIX=/usr COMPONENT_TYPE=lib-shared
	make install INCLUDEDIR=include LIBDIR=lib PREFIX=/usr DESTDIR=$PKG COMPONENT_TYPE=lib-shared
}
