name=libvterm
_commit=224b8dcde1c9640c29a34aa60c0f0d56ad298449
version=20161219
release=1
source=(https://github.com/neovim/$name/archive/${_commit}.tar.gz)

build() {
	cd $name-${_commit}

	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PKG install
}
