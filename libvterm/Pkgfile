name=libvterm
_commit=be3e843897f650ae1cdea85bd68b123bc99402f7
version=20161111
release=1
source=(https://github.com/neovim/$name/archive/${_commit}.tar.gz)

build() {
	cd $name-${_commit}

	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PKG install
}
