name=libvterm
_commit=8623d03ccf924f4746958a29b4233e896e5b522d
version=20170720
release=1
source=(https://github.com/neovim/$name/archive/${_commit}.tar.gz)

build() {
	cd $name-${_commit}

	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PKG install
}
