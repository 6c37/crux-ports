name=libvterm
_commit=6fe2c783d15942f26abdba53eb4144c04e105c96
version=20170807
release=1
source=(https://github.com/neovim/$name/archive/${_commit}.tar.gz)

build() {
	cd $name-${_commit}

	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PKG install
}
