# Description: Tools that help with CRUX package management.
# URL:         https://github.com/onodera-punpun/mk
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  

name=mk
version=0.6.2
release=1
source=(https://github.com/onodera-punpun/mk/archive/$version.tar.gz)

build () {
	cd $name-$version
    
	install -Dm755 depls    $PKG/usr/bin/depls
	install -Dm755 depmk    $PKG/usr/bin/depmk
	install -Dm755 prtpatch $PKG/usr/bin/prtpatch
	install -Dm644 mk.conf  $PKG/etc/mk.conf
}
