# Description: Fast, cross-platform HTTP/2 web server with automatic HTTPS.
# URL:         https://caddyserver.com
# Maintainer:  onodera, https://github.com/6c37/crux-ports/issues
# Depends on:  

name=caddy
version=0.8.3
release=1
source=(
	https://github.com/mholt/caddy/releases/download/v$version/caddy_linux_amd64.tar.gz
	caddy.conf
	caddy
)

build() {
	install -Dm755 caddy_linux_amd64 $PKG/usr/sbin/caddy
	install -Dm755 $SRC/caddy $PKG/etc/rc.d/caddy
	install -Dm644 $SRC/caddy.conf $PKG/etc/caddy/caddy.conf
}
