# Description:	A suckless variant of the *nix core utilities - git checkout
# URL:          http://git.2f30.org/sbase/
# Packager:     kori, kori at openmailbox dot org
# Maintainer:	kori, kori at openmailbox dot org
# Depends on:	git

name=sbase
version=git
release=1
source=()

build() {
    cd $PKGMK_SOURCE_DIR

    if cd $name; then
        git pull git://git.2f30.org/sbase/
    else
        git clone git://git.2f30.org/sbase/ $name
        cd $name
    fi

	make
	make DESTDIR=$PKG PREFIX=/opt/sbase MANPREFIX=/opt/sbase/man install 
}
