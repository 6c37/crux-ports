# Description: Input method framework with extension support.
# URL:         https://fcitx-im.org/wiki/Fcitx
# Maintainer:  6c37 team, https://github.com/6c37/crux-ports/issues
# Depends on:  extra-cmake-modules intltool gtk gtk3 qt4 iso-codes xorg-libxfixes cairo dbus-glib enchant xorg-libxkbfile libxkbcommon icu

name=fcitx
version=4.2.9.2
release=1
source=(http://download.fcitx-im.org/$name/$name-${version}_dict.tar.xz)

build() {
	cd $name-$version

	cmake . \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DENABLE_GTK2_IM_MODULE=ON \
		-DENABLE_GTK3_IM_MODULE=ON \
		-DENABLE_QT_IM_MODULE=ON \
		-DENABLE_PRESAGE=ON \
		-DSYSCONFDIR:PATH=/etc

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/{doc,locale}
}
