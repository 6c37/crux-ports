# Description: Color AsCii Art library
# URL:         http://caca.zoy.org/wiki/libcaca
# Packager:    Joe Schillinger, js1 at openmailbox dot org
# Maintainer:  Joe Schillinger, js1 at openmailbox dot org
# Depends on:  imlib2

name=libcaca
version=0.99.beta19
release=1
source=(http://caca.zoy.org/files/libcaca/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}
  
	./configure --enable-shared --disable-doc --disable-cxx --disable-gl --disable-csharp --disable-static
	make
	make DESTDIR=${PKG} PREFIX="/usr" mandir="/usr/man1" install
}
