# Description: A program that emulates the detach feature of screen
# URL:         http://dtach.sourceforge.net/
# Packager:    kori, kori at openmailbox dot org
# Maintainer:  kori, kori at openmailbox dot org
# Depends on:  

name=dtach
version=0.8
release=1
source=(http://downloads.sourceforge.net/sourceforge/dtach/$name-$version.tar.gz)

build() {
    cd $name-$version

    ./configure --prefix=/usr

    make
	gzip dtach.1

	install -Dm755 dtach      $PKG/usr/bin/dtach
	install -Dm644 dtach.1.gz $PKG/usr/man/man1/dtach.1.gz
}
