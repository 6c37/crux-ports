# Description: Fontconfig files for use with freetype2-infinality. (git checkout)
# URL:         http://www.infinality.net/blog/infinality-freetype-patches/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  onodera, onodera at openmailbox dot org
# Depends on:  fontconfig freetype

name=fontconfig-infinality
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/Infinality/fontconfig-infinality $name
		cd $name
	fi

	mkdir -p $PKG/etc/fonts/{conf.avail,conf.d,infinality} $PKG/usr/bin
	cp -r {conf.avail,conf.d,infinality} $PKG/etc/fonts
	ln -sf /etc/fonts/infinality/infctl.sh $PKG/usr/bin/infctl
}
