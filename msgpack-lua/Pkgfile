# Description: An efficient object serialization library implemented in pure Lua.
# URL:         https://github.com/fperrad/lua-MessagePack
# Packager:    Luiz de Milon, kori at openmailbox dot org
# Maintainer:  Luiz de Milon, kori at openmailbox dot org
# Depends on:  git

name=msgpack-lua
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/fperrad/lua-MessagePack msgpack-lua
		cd $name
	fi

    make LUA=luajit LUAVER=5.1 PREFIX="/usr" DESTDIR="$PKG" install
    make LUAVER=5.2 PREFIX="/usr" DESTDIR="$PKG" install
}
