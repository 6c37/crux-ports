# Description: A simple image viewer inspired by qiv.
# URL:         https://www.pberndt.com/Programme/Linux/pqiv/index.html
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  gtk ffmpeg
# Optional:    poppler-glib imagemagick libwebp

name=pqiv
version=2.10.2
release=1
source=(https://github.com/phillipberndt/$name/archive/$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--gtk-version=2 \
		--with-libav

	make
	make DESTDIR=$PKG install
}
