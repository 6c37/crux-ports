# Description: Python language bindings for the wxWindows toolkit.
# URL:         http://www.expython.org/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  wxgtk gst-plugins-base-compat

name=wxpython-compat
version=3.0.2.0
release=1
source=(http://downloads.sourceforge.net/${name%-compat}/wxPython-src-$version.tar.bz2)

build() {
	cd wxPython-src-$version

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--with-gtk=2 \
		--with-opengl \
		--enable-unicode \
		--enable-graphic_ctx \
		--enable-mediactrl \
		--disable-precomp-headers \
		--with-regex=sys \
		--with-libpng=sys \
		--with-libxpm=sys \
		--with-libjpeg=sys \
		--with-libtiff=sys

	cd wxPython

	python setup.py \
		WXPORT=gtk2 \
		UNICODE=1 \
		build

	python setup.py \
		WXPORT=gtk2 \
		UNICODE=1 \
		install \
		--root="$PKG"

	find $PKG -type f \
	\( \
		-name 'AUTHORS' \
		-o -name 'COPYING' \
		-o -name 'INSTALL' \
		-o -name 'NEWS' \
		-o -name 'THANKS' \
		-o -name 'TODO' \
		-o -name 'TODO.txt' \
		-o -name 'README' \
		-o -name 'README.txt' \
	\) -delete
}
