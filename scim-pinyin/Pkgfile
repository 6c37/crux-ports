# Description: Smart Common Input Method (SCIM) Smart Pinyin Input Method.
# URL:         https://sourceforge.net/projects/scim
# Maintainer:  6c37 team, https://github.com/6c37/crux-ports/issues
# Depends on:  scim

name=scim-pinyin
version=0.5.92
release=1
source=(https://downloads.sourceforge.net/${name%-pinyin}/$name-$version.tar.gz)

build() {
	cd $name-$version

	./bootstrap

	./configure \
		--prefix=/usr \
		--disable-static \
		--disable-nls 

	make
	make DESTDIR=$PKG install
}
