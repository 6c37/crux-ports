# Description: Tewi: a small bitmap font - git checkout
# URL:         https://github.com/lucy/tewi-font
# Packager:    Samuel Hand, samuel dot hand at openmailbox dot org
# Maintainer:  Samuel Hand, samuel dot hand at openmailbox dot org
# Depends on:  git

name=bdf-tewi
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q;git reset --hard origin/master	
	else
		git clone git://github.com/lucy/tewi-font $name
		cd $name
	fi

	install -Dm644 Tewi-bold-11.bdf     $PKG/usr/share/fonts/X11/BDF/Tewi/Bold.bdf
	install -Dm644 Tewi-normal-11.bdf   $PKG/usr/share/fonts/X11/BDF/Tewi/Normal.bdf
	install -Dm644 Tewi2a-bold-11.bdf   $PKG/usr/share/fonts/X11/BDF/Tewi/2a/Bold.bdf
	install -Dm644 Tewi2a-normal-11.bdf $PKG/usr/share/fonts/X11/BDF/Tewi/2a/Normal.bdf
}
