# Description: C extension adding bitwise operations on numbers
# URL:         http://bitop.luajit.org/index.html
# Maintainer:  Luiz de Milon, kori at openmailbox dot org
# Packager:    Luiz de Milon, kori at openmailbox dot org
# Depends on:  lua

name=lua-bitop
version=1.0.2
release=1

source=(http://bitop.luajit.org/download/LuaBitOp-${version}.tar.gz)

build() {
	cd LuaBitOp-${version}
	
	make INCLUDES=' -I/usr/include' LUA='lua'
	install -Dm644 bit.so "${PKG}/usr/lib/lua/5.2/bit.so"
}
