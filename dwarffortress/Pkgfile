# Description: A single-player fantasy game in which you build a dwarven outpost or play an adventurer in a randomly generated world.
# URL:         http://www.bay12games.com/dwarves/
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  gtk sdl_image sdl_ttf openal libsndfile glew

name=dwarffortress
version=0.43.05
release=2
source=(
	http://www.bay12games.com/dwarves/df_43_05_linux.tar.bz2
	https://github.com/svenstaro/dwarf_fortress_unfuck/archive/$version.tar.gz
	dwarffortress
)

build() {
	cd dwarf_fortress_unfuck-$version

	cmake .
	make

	install -dm755 $PKG/usr/share
	cp -r $SRC/df_linux $PKG/usr/share/dwarffortress

	rm -r $PKG/usr/share/dwarffortress/{df,g_src}
	rm -r $PKG/usr/share/dwarffortress/libs/*

	find $PKG/usr/share/dwarffortress -type d -exec chmod 755 {} +
	find $PKG/usr/share/dwarffortress -type f -exec chmod 644 {} +

	install -Dm755 $SRC/df_linux/libs/Dwarf_Fortress $PKG/usr/share/dwarffortress/libs/Dwarf_Fortress
	install -Dm755 $SRC/dwarf_fortress_unfuck-$version/libgraphics.so $PKG/usr/share/dwarffortress/libs/libgraphics.so
	install -Dm755 $SRC/dwarffortress $PKG/usr/bin/dwarffortress

	ln -s /usr/lib/libpng.so $PKG/usr/share/dwarffortress/libs/libpng.so.3
}
