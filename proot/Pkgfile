name=proot
_commit=ca57ca598b38a979d65bad782228505fd5649d54
version=20180122
release=1
source=(https://github.com/$name-me/PRoot/archive/${_commit}.tar.gz)

build() {
	cd PRoot-${_commit}/src

	make
	make DESTDIR=$PKG/usr/bin install
}
